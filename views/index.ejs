<div class="popUpBox" onclick="openPopup()"></div>

<div class="smallpopup">
  
</div>

<div id="image_loader">
  <img src="/images/extra/2.gif" alt="">
</div>

<div class="popUpBoxContent">
  <div class="close">
    <a id="content_heading">Add category</a>
    <a onclick="openPopup()"><span class="iconify" data-icon="akar-icons:cross"></span></a>
  </div>
  <div class="content" id="content">
    <div class="alert alert-success" id="add_category_alert" role="alert">
        Category added successfully !!
    </div>
    <div class="add_category">
      <form onsubmit="addCategory(event)" id="form" method="post" enctype="multipart/form-data" autocomplete="off">
        <div class="form-group">
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter Category Name" onkeyup="checkCategory(this.value)" style="margin-bottom: 10px;" required>
          <div id="validationServernameFeedback" style="margin: 10px 0px;" class="invalid-feedback">
            Category name already exists.
          </div>
        </div>
        <div class="form-group">
          <input type="file" id="category_image" name="category_image" class="form-control" onchange="changePreview()" style="height: unset;padding: 10px;" placeholder="Select Cover Image" required>
        </div>
        <input type="hidden" name="category_image_path" id="category_image_path">
        <div class="preview">
          <a id="delete_button" onclick="deleteCurrentImage()"><span class="iconify" data-icon="akar-icons:cross"></span></a>
          <img src="/images/extra/nopreview.jpeg" id="preview_image" alt="">
        </div>
        <button type="submit" id="category_verify" class="btn btn-primary" disabled><span id="preloader"><img src="/images/extra/2.gif" alt=""></span><span id="buttonText">Create</span></button>
      </form>
    </div>
  </div>
</div>

<div class="adminBox">

</div>

<div class="popUpBoxGallery" onclick="openGalleryPopup()"></div>

<div class="popUpBoxGalleryContent">
  <div class="close">
    <a id="content_heading">Add Images</a>
    <a onclick="openGalleryPopup()"><span class="iconify" data-icon="akar-icons:cross"></span></a>
  </div>
  <div class="content" id="content">
    <div class="alert alert-success" id="add_category_alert" role="alert">
        Images added successfully !!
    </div>
    <div class="add_category">
      <form onsubmit="addGalleryImages(event)" id="gallery_form" method="post" enctype="multipart/form-data" autocomplete="off">
        <div class="form-group">
          <select class="form-control" id="categories_form" name="category" aria-label="Images Categories" required>
            <option value="">Loading...</option>
          </select>
        </div>
        <input type="file" id="imgupload" accept="images/*" style="display:none" onchange="getAllImages()" multiple>
        <button class="add_gallery_images" onclick="openLocalStorage()">Add Images</button>
        <div class="row all_images" id="preview">
          
        </div>
        <button type="submit" id="gallery_verify" class="btn btn-primary"><span id="preloader"><img src="/images/extra/2.gif" alt=""></span><span id="buttonText">Save</span></button>
      </form>
    </div>
  </div>
</div>

